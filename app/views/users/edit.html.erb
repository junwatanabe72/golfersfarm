          </div>
        </td>
    </tr>
    <tr>
      <th>アイアン</th>
        <td><%= @user.iron %></td>
        <td>
          <div class="form-group">
            <%= f.text_field :iron,class: 'form-control' %>
            <%#= f.label :iron%>
          </div>
        </td>
    </tr>
    <tr>
      <th>ウェッジ</th>
        <td><%= @user.wedge %></td>
        <td>
          <div class="form-group">
            <%= f.text_field :wedge,class: 'form-control' %>
            <%#= f.label :wedge %>
          </div>
        </td>
    </tr>
    <tr>
      <th>パター</th>
        <td><%= @user.putter %></td>
        <td>
          <div class="form-group">
            <%= f.text_field :putter,class: 'form-control' %>
            <%#= f.label :putter %>
          </div>
        </td>
    </tr>
  </tbody>
</table>
 
 
 <h3>フォト編集</h3>
 
<table class="table">
  <tbody>
    <tr>
      <th>Imagephoto/プロフィール写真
        <br>
          <div class="form-group">
            <%#= f.label :image, '紹介写真' %>
            <%= f.file_field :image, class: 'form-control' %>
          </div>
      </th>
      <td>
       <%= image_tag @user.image.thumb_edit.url if @user.image.present? %>
      </td>
    </tr>
     <tr>
      <th>Gearphoto/クラブセッティング写真
        <br>
          <div class="form-group">
            <%#= f.label :gear, '使用クラブ' %>
            <%= f.file_field :gear, class: 'form-control' %>
          </div>
      </th>
      <td>
        <%= image_tag @user.gear.thumb_edit.url if @user.gear.present? %>
      </td>
    </tr>
  </tbody>
</table>
      
 
 
 <h3>パスワードその他編集</h3>
 
<table class="table">
  <tbody>
    <tr>
      <th>Password/パスワード</th>
      <td>
        <div class="form-group">
        <%#= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      </td>
    </tr>
    <tr>
      <th>Password-confirmation/パスワード再確認</th>
      <td>
        <div class="form-group">
        <%#= f.label :password_confirmation, 'パスワード確認' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      </td>
    </tr>
  </tbody>
</table>

      <div class="form-group">
        <%= f.label :status, '公開 or　非公開※' %>
        <%= f.select :status ,User.statuses.keys.to_a, class: 'form-control' %>
        <small>※ログインユーザーにのみプロフィールを公開します。</small>
      </div>

      
<%= f.submit '編集', class: 'btn btn-primary btn-block' %>
      
    <% end %>
  </div>
</div>