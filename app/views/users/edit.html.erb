      <td><%= @user.driver %></td>
      <td>
        <div class="form-group">
          <%= f.text_field :driver,class: 'form-control' %>
          <%#= f.label :driver %>
        </div>
      </td>
    </tr>
    <tr>
      <th>Dシャフト</th>
      <td><%= @user.dshaft %></td>
      <td>
        <div class="form-group">
          <%= f.text_field :dshaft,class: 'form-control' %>
          <%#= f.label :dshaft %>
        </div>
      </td>
    </tr>
    <tr>
      <th>ウッド</th>
        <td><%= @user.wood %></td>
        <td>
          <div class="form-group">
            <%= f.text_field :wood,class: 'form-control' %>
            <%#= f.label :wood %>
          </div>
        </td>
    </tr>
    <tr>
      <th>ユーティリティ</th>
        <td><%= @user.ut %></td>
