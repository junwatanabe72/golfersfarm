<style>
             table {
                font-size:13px;
            }
            
            h3{
              margin:5px;
              color :red;
            }
            
</style>

<div class="row">
<div class="container">
<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <h3>プロフィール編集</h3>
<table class="table table-striped">
  <tbody>
    <tr>
      <th>項目</th>
      <th>現在値</th>
      <th>変更値</th>
    </tr>
    <tr>
      <th>Name/名前</th>
      <td><%= @user.name %></td>
      <td>
        <div class="form-group">
          <%#= f.label :name, "名前" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </td>
      
    </tr>
    <tr>
      <th>Email/メール</th>
      <td><%= @user.email %></td>
      <td>
        <div class="form-group">
          <%#= f.label :email, "メール" %>
          <%#= f.text_field :email, class: 'form-control' %>
        </div>
      </td>
    </tr>
    <tr>
      <th>Sex/性別</th>
      <td><%= @user.sex %></td>
      <td>
        <div class="form-group">
          <%#= f.label :sex, "性別" %>
          <%= f.text_field :sex, class: 'form-control' %>
        </div>
      </td>
    </tr>
    <tr>
      <th>Birth_Place/出生地</th>
      <td><%= @user.bplace %></td>
      <td>
      <div class="form-group">
        <%#= f.label :bplace, '出生地' %>
        <%= f.text_field :bplace, class: 'form-control' %>
      </div>
      </td>
    </tr>
    <tr>
      <th>Address/現住所</th>
      <td><%= @user.address %></td>
      <td>
      <div class="form-group">
        <%#= f.label :address, '現所在地' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      </td>
    </tr>
    <tr>
      <th>Best_Score/ベストスコア</th>
      <td><%= @user.bscore %></td>
      <td>
      <div class="form-group">
        <%#= f.label :bscore, 'ベストスコア' %>
        <%= f.text_field :bscore, class: 'form-control' %>
      </div>
      </td>
    </tr>
    <tr>
      <th>Distance/飛距離</th>
      <td><%= @user.distance %></td>
      <td>
      <div class="form-group">
        <%#= f.label :distance, '飛距離' %>
        <%= f.text_field :distance, class: 'form-control' %>
      </div>
      </td>
    </tr>
    <tr>
      <th>Home_Course/所属コース</th>
      <td><%= @user.hcourse %></td>
      <td>
      <div class="form-group">
        <%#= f.label :hcourse, 'ホームコース' %>
        <%= f.text_field :hcourse, class: 'form-control' %>
      </div>
      </td>
    </tr>
    <tr>
      <th>Job/職業・勤務先</th>
      <td><%= @user.job %></td>
      <td>
      <div class="form-group">
        <%#= f.label :job, '職業・勤務先' %>
        <%= f.text_field :job, class: 'form-control' %>
      </div>
      </td>
    </tr>
    <tr>
      <th>School/出身校</th>
      <td><%= @user.school %></td>
       <td>
       <div class="form-group">
        <%#= f.label :school, '出身校' %>
        <%= f.text_field :school, class: 'form-control' %>
      </div>
      </td>
    </tr>
    <tr>
      <th>Hobby/趣味</th>
      <td><%= @user.hobby %></td>
      <td>
      <div class="form-group">
        <%#= f.label :hobby, '趣味' %>
        <%= f.text_field :hobby, class: 'form-control' %>
      </div>
      </td>
    </tr>
  </tbody>
</table>

<h3>youtube関連編集</h3>

<table class="table">
  <tbody>
  <tr>
      <th>Channel/youtubeチャンネル<br><%= raw Rinku.auto_link(h(@user.channel)) %></th>
      
      <td>
      <div class="form-group">
        <%#= f.label :channel, "youtubeチャンネル" %>
        <%= f.text_field :channel, class: 'form-control' %>
      </div>
      </td>
    </tr>
  </tbody>
</table>
<table class="table">
  <tbody>
  <tr>
      <th>
        <div class="form-group">
        <%= f.label :video, 'Video/スウィング動画' %>
        <%= f.text_field :video, class: 'form-control' %>
      </div>
      </th>
    </tr>
    <tr>
      <td>
        <% iframe = content_tag(
          :iframe,'', # empty body
          width: 560,
          height: 315,
          src: "https://www.youtube.com/embed/#{@user.video}?rel=0",
          frameborder: 0,
          allowfullscreen: true ) %>
        <%= content_tag(:div, iframe, class: 'youtube-container') %>    
      </td>
    </tr>
  </tbody>
</table>
 
 <h3>クラブセッティング編集</h3>
 
 <table class="table table-striped">
  <tbody>
    <tr>
      <th>クラブ</th>
      <th>現在値</th>
      <th>変更値</th>            
    </tr>
    <tr>
