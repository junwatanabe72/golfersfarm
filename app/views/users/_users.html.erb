<%= search_form_for @q do |f| %>
  <%= f.label :name_or_address, "Keyword" %>
  <%= f.search_field :name_or_address_cont %>
  
  <%= f.submit "検索" %>
<% end %>
<%= sort_link(@q,:name, "Name") %>

<% if logged_in? %>

<% if users.any? %>
    <div class="container">
      <div class="row">
        <% users.each do |user| %>
           <div class="col-xs-6 col-sm-4 col-md-2">
            <div class="card mt-1 mb-2" id="user_image">
             <% if user.image? %>
              <%= image_tag user.image.thumb_in.url  if user.image.present? %>
             <% else %>
                  <%= image_tag "default.jpg" , size:"155" %>
             <% end %>
             <div class="card-body">
              <div class="card-title">
              <%= "name:#{user.name}" %>
              </div>
              <div class="card-text">
              <p><%= link_to 'profile', user_path(user) %></p>
             </div>
            </div>
            </div>
           </div>
        <% end %>
      <%= paginate users %>
    </div>
  </div>
<% end %>

<% else %>

<% if o_users.any? %>
    <div class="container">
      <div class="row">
        <% o_users.each do |user| %>
           <div class="col-xs-6 col-sm-4 col-md-2">
            <div class="card mt-1 mb-2" id="user_image">
             <% if user.image? %>
              <%= image_tag user.image.thumb_in.url  if user.image.present? %>
             <% else %>
                  <%= image_tag "default.jpg" , size:"155" %>
             <% end %>
             <div class="card-body">
              <div class="card-title">
              <%= "name:#{user.name}" %>
              </div>
              <div class="card-text">
              <p><%= link_to 'profile', user_path(user) %></p>
             </div>
            </div>
            </div>
           </div>
        <% end %>
      <%= paginate o_users %>
    </div>
  </div>
<% end %>

<% end %>
