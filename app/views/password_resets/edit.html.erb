<div class="text-center">
  <h1 class="pt-4 pb-3">Forgot password</h1>
</div>
<div class="container">
  <div class="row">
    <div class="pb-3 col-sm-6 offset-sm-3">
      <%= form_with(model: @user,url: password_resets_path(params[:id]), local: true) do |f| %>
      
        <%= hidden_field_tag :email, @user.email %>
      
        <div class=" pb-3  pt-3 form-group">
          <%= f.label :password, 'Password' %>
            <div data-toggle="tooltip" title="8字以上。">
              <%= f.password_field :password, class: 'form-control' %>
            </div>
        </div>
  
        <div class=" pb-3  pt-3 form-group">
           <%= f.label :password_confirmation, 'Confirmation' %>
            <div data-toggle="tooltip" title="8字以上。">
             <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
        </div>
        
        <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>


       
      