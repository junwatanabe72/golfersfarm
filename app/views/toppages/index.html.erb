<% if logged_in? %>

<div class="container">
    <h1 class="pl-4">Golfersfarm</h1>
    <div class="text-center mb-2">
      <%= image_tag "fb_logo.png",class: "img-fluid" %>
      </div>
       <%= render 'layouts/info' %>
  
</div>
 
 
<% else %>

<div class="container">
  <div class="jumbotron">
    <h1 class="display-5">Welcome to the Golfersfarm</h1>
      <p class="lead">世界初！ゴルファーのプロフィール登録サイトです！
        <br>さあ、いますぐ登録して<br>あなたのプロフィールを公開しましょう！</p>
      <div class="container">
        <div class="row">
          <div class="m-2">
             <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
            <p>今すぐ登録しよう！</p>
          </div>
          <div class="m-2">
             <%= link_to 'learn more!', about_path, class: 'btn btn-lg btn-primary' %>
             <p>アプリの使い方！</p>
          </div>
        </div>
      </div>
  </div>
</div>
<div class="container">
   <%= render 'layouts/info' %>
  <%= render 'layouts/explain' %>
 
</div>
<% end %>
