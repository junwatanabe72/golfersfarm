<% if current_user == user  %>
<p　class="mt-3">メッセージ一覧</p>
  <ul class="list-unstyled">
  <% rmessages.each do |message| %>
    <li class="media mb-3 mt-3">
     <div class="col-xs-4 col-sm-3 col-md-2">
      <div class="mr-2 rounded" id="user_image">
         <% if user.image? %>
          <%= image_tag message.user.image.url if message.user.image.present? %>
         <% else %>
          <%= image_tag "/assets/default.jpg" %>
        <% end %>
      </div>
     </div>
      <div class="media-body">
          <%= link_to message.user.name, user_path(message.user) %> <span class="text-muted">posted at <%= message.created_at %></span>
          <p class="mb-0"><%= message.content %></p>
      </div>
    </li>
  <% end %>
  <%= paginate messages %>
</ul>
<% else %>
  <%= render 'messages/mform', rmessage: @rmessage, message: @message, user: @user %>
<p　class="mt-3">メッセージ一覧</p>
<ul class="list-unstyled">
  <% messes.each do |message| %>
    <li class="media mb-3 mt-3">
     <div class="col-xs-4 col-sm-3 col-md-2">
      <div class="mr-2 rounded" id="user_image">
         <% if user.image? %>
          <%= image_tag message.user.image.url if message.user.image.present? %>
         <% else %>
          <%= image_tag "/assets/default.jpg" %>
        <% end %>
      </div>
     </div>
      <div class="media-body">
        <%= link_to message.user.name, user_path(message.user) %> <span class="text-muted">posted at <%= message.created_at %></span>
          <p class="mb-0"><%= message.content %></p>
            <% if current_user == message.user %>
              <%= link_to "Delete", message, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
      </div>
    </li>
 <% end %>
</ul>
<%= paginate messages %>
<% end %>