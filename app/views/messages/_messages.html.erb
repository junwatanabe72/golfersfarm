<%= render 'messages/mform', message: @message %>
<ul class="list-unstyled">
  <% messages.each do |message| %>
    <li class="media mb-3">
      <div class="mr-2 rounded" id="user_image">
        <%= image_tag user.image.url if user.image.present? %>
      </div>
      <div class="media-body">
        <div>
          <%= link_to message.user.name, user_path(message.user) %> <span class="text-muted">posted at <%= message.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= message.content %></p>
        </div>
        <div>
          <% if current_user == message.user %>
            <%= link_to "Delete", message, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate messages %>
</ul>