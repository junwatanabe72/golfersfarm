              <li class="nav-item"><%= link_to "アカウント削除", user_path(current_user) ,method: :delete, data: { confirm: "You sure?" }, class: 'nav-link'  %></li>
          <% else %>
              <li class="nav-item"><%= link_to 'ユーザー 一覧', users_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'サインアップ', signup_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to "ログイン", login_path , class: "nav-link" %></li>
          <% end %>
        </ul>
    </div>
  </nav>
