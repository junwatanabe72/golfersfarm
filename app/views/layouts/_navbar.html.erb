<header class="sticky-top">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <h1><a class="navbar-brand" href="/"><strong>Golfersfarm</strong></a></h1>
    <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"  
    aria-controls="navbarSupportedContent" aria-expanded="false" id="a" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto"></ul>
        <ul class="navbar-nav">
          <% if logged_in? %>
              <li class="nav-item"><%= link_to 'ユーザー 一覧', users_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'プロフィール', user_path(current_user), class: 'nav-link'  %></li>
              <li class="nav-item"><%= link_to 'プロフィール編集', edit_user_path(current_user), class: 'nav-link'  %></li>
